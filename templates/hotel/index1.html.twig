{% extends 'base.html.twig' %}

{% block title %}Recherche d'hôtels{% endblock %}

{% block body %}
    <br>
    <br>
    <h1>Recherche d'hôtels</h1>

    <form action="{{ path('app_hotel_index1') }}" method="GET">
        <label for="search">Recherche d'hôtels :</label>
        <input type="text" id="search" name="q" placeholder="Entrez un terme de recherche">
        <button type="submit">Rechercher</button>
    </form>

    <h1>Résultats de la recherche</h1>

    <div class="row">
        {% for hotel in pagination %}
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card" style="border: 2px solid #e9ecef;">
                    <div class="card">
                        {% if hotel.imageName %}
                            <img src="{{ asset('images/hotels/' ~ hotel.imageName) }}" alt="{{ hotel.name }}" class="card-img-top" style="max-height: 200px;">
                        {% else %}
                            <img src="{{ asset('images/default.jpg') }}" alt="Image par défaut" class="card-img-top">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title" style="color: #1a1a1a; font-family: 'Open Sans', sans-serif;">Nom : {{ hotel.name }}</h5>
                            <h5 class="card-text" style="color: #666666; font-family: 'Open Sans', sans-serif;">Caractéristiques : {{ hotel.features }}</h5>
                            <h5 class="card-text" style="color: #666666; font-family: 'Open Sans', sans-serif;">Location : {{ hotel.location }}</h5>
                            <h5 class="card-text" style="color: #666666; font-family: 'Open Sans', sans-serif;">Prix : {{ hotel.prix }} €</h5>
                            <a href="{{ path('app_hotel_show', {'id': hotel.id}) }}" class="btn btn-primary" style="background-color: #1a1a1a; border-color: #1a1a1a;">Voir détails</a>
                            <a href="{{ path('app_hotel_pdf', {'id': hotel.id}) }}" class="btn btn-primary" style="background-color: #1a1a1a; border-color: #1a1a1a;">PDF</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col">
                <p>Aucun enregistrement trouvé</p>
            </div>
        {% endfor %}
    </div>
