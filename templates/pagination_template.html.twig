{% block pagination %}
    <nav aria-label="Page navigation">
        <ul class="pagination">
            {% if pagination.hasPrevious %}
                <li class="page-item">
                    <a class="page-link" href="{{ pagination.first }}">Première</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="{{ pagination.previous }}">Précédente</a>
                </li>
            {% endif %}
            {% for page in pagination.pages %}
                <li class="page-item{% if page.isCurrent %} active{% endif %}">
                    <a class="page-link" href="{{ page.url }}">{{ page.number }}</a>
                </li>
            {% endfor %}
            {% if pagination.hasNext %}
                <li class="page-item">
                    <a class="page-link" href="{{ pagination.next }}">Suivante</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="{{ pagination.last }}">Dernière</a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endblock %}
