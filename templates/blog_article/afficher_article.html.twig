{% extends 'base.html.twig' %}

{% block body %}
	<div class="page-title image-title" style="background-image:url({{asset('assets/img/banner.jpg')}});">
		<div class="container">
			<div class="page-title-wrap">
				<h2>Our Blogs</h2>
				<p>
					<a href="#" class="theme-cl">Home</a>
					|
					<span>Our Blogs</span>
				</p>
			</div>
		</div>
	</div>
	<section class="gray-bg">
		<div class="container">
			{% for item in blog_articles %}
			{% if loop.index % 3 == 1 %}<div class="clearfix"></div>{% endif %}
				
					<div class="col-md-4 col-sm-6">
						<div class="blog-box blog-grid-box">
							<div class="blog-grid-box-img">
								<img src="{{asset('uploads/images/'~ item.getImage() )}}" class="img-responsive" alt="">
							</div>

							<div class="blog-grid-box-content">
								<div class="blog-avatar text-center">
									<img src="{{asset('assets/img/user-1.jpg')}}" class="img-responsive" alt="">
									<p>
										<strong>By</strong>
										<span class="theme-cl">
											{{ item.getUsers() ? item.getUsers().getNom() : ''  }}
											{{ item.getUsers() ? item.getUsers().getPrenom() : ''  }}
										</span>
									</p>
								</div>
								<h4>Why People Use Listing Hub</h4>
								<p>{{ item.getContenu() }}</p>
								<a href="{{ path('app_blog_article_show',{'id': item.id }) }}" class="theme-cl" title="Read More..">Continue...</a>
							</div>

						</div>
					</div>
				
				 {% if loop.index % 3 == 0 or loop.last %}<div class="clearfix"></div>{% endif %}
			{% endfor %}
		</div>
	</section>
{% endblock %}
